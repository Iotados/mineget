{
  "platforms": {
    "spigot": {
      "url": "https://api.spiget.org/v2/",
      "endpoints": {
        "name": {
          "endpoint": "resources/{id}",
          "returns": {
            "name": "name"
          }
        },
        "downloads": {
          "endpoint": "resources/{id}",
          "returns": {
            "downloads": "downloads"
          }
        },
        "latest_version": {
          "endpoint": "resources/{id}/versions/latest",
          "returns": {
            "version": "name",
            "published": "releaseDate"
          }
        },
        "rating": {
          "endpoint": "resources/{id}",
          "returns": {
            "average": "rating.average",
            "count": "rating.count"
          }
        },
        "price": {
          "endpoint": "resources/{id}",
          "returns": {
            "price": "price",
            "currency": "currency"
          }
        }
      }
    },
    "polymart": {
      "url": "https://api.polymart.org/v1/",
      "endpoints": {
        "name": {
          "endpoint": "getResourceInfo?resource_id={id}",
          "returns": {
            "name": "name"
          }
        },
        "downloads": {
          "endpoint": "getResourceInfo?resource_id={id}",
          "returns": {
            "downloads": "response.resource.downloads"
          }
        },
        "latest_version": {
          "endpoint": "getResourceInfo?resource_id={id}",
          "returns": {
            "version": "response.resource.updates.latest.version",
            "published": "response.resource.updates.latest.time"
          }
        },
        "rating": {
          "endpoint": "getResourceInfo?resource_id={id}",
          "returns": {
            "average": "response.resource.reviews.stars",
            "count": "response.resource.reviews.count"
          }
        },
        "price": {
          "endpoint": "resources/{id}",
          "returns": {
            "price": "response.resource.price",
            "currency": "response.resource.currency"
          }
        }
      }
    },
    "songoda": {
      "url": "https://marketplace.songoda.com/api/v2/",
      "endpoints": {
        "name": {
          "endpoint": "products/id/{id}",
          "returns": {
            "name": "data.name"
          }
        },
        "downloads": {
          "endpoint": "products/id/{id}",
          "returns": {
            "downloads": "data.downloads"
          }
        },
        "rating": {
          "endpoint": "products/id/{id}",
          "returns": {
            "average": "data.rating",
            "count": "data.reviews"
          }
        },
        "price": {
          "endpoint": "products/id/{id}",
          "returns": {
            "price": "data.price",
            "currency": "data.currency"
          }
        }
      }
    },
    "modrinth": {
      "url": "https://api.modrinth.com/v2/",
      "endpoints": {
        "name": {
          "endpoint": "project/{id}",
          "returns": {
            "name": "title"
          }
        },
        "downloads": {
          "endpoint": "project/{id}",
          "returns": {
            "downloads": "downloads"
          }
        }
      }
    }
  }
}
